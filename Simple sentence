//简单的选择语句
#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
int main()
{
    int coding=1;
    printf("请输入1或0\n");
    scanf("%d",&coding);
    if(coding==1)
    {
        printf("你选择了1");
    }
    else
    {
        printf("你选择了0");
    }
    return 0;
}

//简单的循环语句
//while循环语句
#include <stdio.h>
int main()
{
    int line = 0;
    printf("请完成20000行代码");
    while(line < 20000)
    {
    printf("写代码：%d",line);
    line++;
    }
    if(line >= 20000)
    {
    printf("你完成了20000行代码");
    }
    else
    {
    printf("继续加油");
    }
    return 0;
}



//简单的函数调用
Add(int x,int y)
{
    int z=x+y;
    return z;
/*
    return x+y;//简化的写法
*/
}
int main()
{    
    //输入两个数，并对其进行初始化
    int n1=0;
    int n2=0;//此处的n1和n2赋值为0意义是对其进行初始化否则随机输入两个非整形数据输出结果也会是整形
    scanf("%d %d",&n1,&n2);
    //调用求和函数
    int sum=Add(n1,n2);  //该函数名称Add为随机命名，需要在括号内放入数据，此时将调用第46行代码
    //打印输出结果
    printf("%d",sum);
    return 0;
}



